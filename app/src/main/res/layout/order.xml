<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00BCD4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameOfIntentedTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bàn"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm món"
        android:id="@+id/themMonBtn"
        android:textSize="20sp"
        android:layout_below="@id/nameOfIntentedTable"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"

        android:layout_marginTop="20dp">

    </Button>
  <ListView
      xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/listViewChosenFood"
      android:layout_below="@id/themMonBtn"
      tools:listitem="@layout/menu_food_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listfooter="@layout/footer"
                android:layout_alignParentBottom="true"
>   </ListView>

</RelativeLayout>